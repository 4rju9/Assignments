<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="5dp"
        android:layout_marginVertical="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:text="+ INVITE"
                    android:textSize="12sp"
                    android:textColor="@color/netclan"/>

                <TextView
                    android:id="@+id/item_2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/netclan"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/item_2_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/netclan"
                    android:textSize="10sp"/>

                <ProgressBar
                    android:id="@+id/item_2_progress_bar"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:max="100"
                    android:maxHeight="5dp"
                    android:progressTint="@color/netclan"
                    android:progressBackgroundTint="@color/netclan_gray"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/custom_progress_bg"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/call_icon"
                        app:tint="@color/white"
                        android:background="@drawable/round_filled"
                        android:padding="5dp"
                        android:contentDescription="@string/button_desc"
                        android:layout_marginStart="15dp"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_person_add_alt_1_24"
                        app:tint="@color/white"
                        android:background="@drawable/round_filled"
                        android:padding="5dp"
                        android:contentDescription="@string/button_desc"
                        android:layout_marginStart="12dp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/item_2_profession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:textColor="@color/netclan"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="40dp"
                android:textColor="@color/netclan"
                android:text="@string/tv_initial_status_2"
                android:textSize="11sp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:paddingVertical="14dp"
        android:paddingHorizontal="11dp"
        android:background="@drawable/round_filled"
        android:backgroundTint="@color/netclan_gray"
        android:elevation="9dp"
        app:layout_constraintTop_toTopOf="@id/cardView"
        app:layout_constraintLeft_toLeftOf="@id/cardView"
        app:layout_constraintRight_toLeftOf="@id/cardView"/>

</androidx.constraintlayout.widget.ConstraintLayout>