<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NetclanExplorerClone" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/netclan</item>
        <item name="android:statusBarColor">@color/netclan_dark</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style
        name="Theme.BottomNavigationView.ActiveIndicator"
        parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>


    <style name="LabelText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LabelShape" parent="">
        <item name="android:shape">rectangle</item>
        <item name="android:radius">8dp</item>
    </style>

    <style name="customLabel" parent="android:Widget">
        <item name="android:layout_margin">8dp</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAppearance">@style/LabelText</item>
        <item name="shapeAppearance">@style/LabelShape</item>
        <item name="backgroundTint">@color/netclan</item>
    </style>

    <style name="fab_round">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>